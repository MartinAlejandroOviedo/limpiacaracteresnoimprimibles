{
  "manifest_version": 3,
  "name": "Invisible Character Cleaner",
  "version": "1.0.1",
  "description": "Elimina caracteres invisibles de la p\u00e1gina actual.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Limpiar caracteres no imprimibles",
    "default_icon": {
      "16": "icon_16.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "analyzer.js",
        "report_clasificado.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}