{
  "manifest_version": 3,
  "name": "Invisible Character Cleaner",
  "version": "1.0.1",
  "description": "Elimina caracteres invisibles de la p√°gina actual.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs" 
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Limpiar caracteres no imprimibles",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": [
        "analyzer.js", 
        "report.js",   
        "content.js"   
      ],
      "run_at": "document_idle" 
    }
  ]
}